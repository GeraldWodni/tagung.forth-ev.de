doctype html
include ../mixins

mixin sidebar
    div.euroforth
        img.logo(src="/images/logo-big.png", alt="Forth e.V. Logo")
        span.euroforth.number
            =moment().format("YYYY")
        span.euroforth.name
            | ForthTagung
        span.euroforth.year
            =moment().format("YYYY-MM-DD")


html
    head
        title
            block title
                | Forth Gesellschaft e.V. OBS
        meta(name="viewport",content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width")
        +style('/css/obs.css')
        +styles
    body
        block content
        +scripts
